{
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["build:styles", "build:icons"]
    },
    "build:styles": {
      "outputs": ["dist/**"]
    },
    "build:icons": {
      "outputs": ["dist/**"]
    },
    "dev": {
      "with": ["dev:styles", "dev:icons"]
    },
    "dev:styles": {
      "cache": false,
      "persistent": true
    },
    "dev:icons": {
      "cache": false,
      "persistent": true
    }
  }
}
