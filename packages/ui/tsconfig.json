{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["@plott-life/dev/tsconfig", "@plott-life/utils/tsconfig"],
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "paths": {
      "react": [
        "./node_modules/preact/compat/"
      ],
      "react-dom": [
        "./node_modules/preact/compat/"
      ],
    }
  },
  "include": [
    "components",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
