---
import Meta from '@layouts/Meta.astro';
import '@styles/style.css';
import GoogleAnalytics from "../components/script/GoogleAnalytics.astro";
import GoogleTagManager from "../components/script/GoogleTagManager.astro";
import GoogleTagManagerFallback from "../components/script/GoogleTagManagerFallback.astro";

const { PUBLIC_GA_ID } = import.meta.env;
const {
  metaData = {
    title: 'plott Life',
    description: '레지던스, 아파트, 오피스텔, 원룸 등 1주 이상 단기임대는 플라트 라이프',
    image: 'https://cdn.plott.co.kr/images/null.webp?w=1200&h=630',
  },
} = Astro.props;
---

<html
  lang='ko'
  data-theme='light'
>
  <head>
    <Meta {...metaData} />
    <GoogleAnalytics id={PUBLIC_GA_ID} />
    <GoogleTagManager id={PUBLIC_GTM_ID} />
  </head>
  <body class='flex justify-center min-h-screen'>
    <GoogleTagManagerFallback id={PUBLIC_GA_ID} />
    <div class='relative flex flex-col w-full min-h-screen bg-gray-100 shadow-lg'>
      <main class='flex-1 max-w-[600px] bg-white mx-auto w-full'>
        <slot name='header' />
        <slot />
        <slot name='footer' />
      </main>
      <!--<button class="fixed bottom-4 right-1/2 translate-x-1/2 btn btn-primary rounded-full shadow-lg"> + </button>-->
    </div>
  </body>
  <!-- 임시로 준비중 처리 -->
  <script type="module">
    const elements = [
      document.getElementById('search-button'),
      document.getElementById('nav-search'),
      document.getElementById('nav-contract'),
      document.getElementById('nav-my'),
      document.getElementById('btn-contract'),
    ];

    const handleExceptionEvent = (event) => {
      event.preventDefault();
      alert('준비중입니다!');
    };

    elements.forEach((el) => {
      if (el) el.addEventListener('click', handleExceptionEvent);
    });
  </script>
</html>
