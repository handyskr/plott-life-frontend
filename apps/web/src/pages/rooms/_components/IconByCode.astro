---
import {
  Bed,
  Bathtub,
  Ruler,
  Building,
  Television,
  Wifi,
  Refrigerator,
  WashingMachine,
  MicrowaveOven,
} from '@plott-life/ui/components/icons';

interface Props {
  code: any,
  className?: string,
}

const { code, className = '' } = Astro.props;

const map = {
  TV: Television,
  WIFI: Wifi,
  AIR_CONDITIONER: Ruler,
  REFRIGERATOR: Refrigerator,
  WASHING_MACHINE: WashingMachine,
  MICROWAVE: MicrowaveOven,
  SINK: Bathtub,
};

const Icon = map[code] ?? null;
---
{Icon ? <Icon class={className} /> : null}
