    <!--          <td>청소비</td>-->
    <!--          <td>{room.cleaning}</td>-->
    <!--        </tr>-->
    <!--        <tr>-->
    <!--          <td>보증금</td>-->
    <!--          <td>{room.deposit}</td>-->
    <!--        </tr>-->
    <!--      </tbody>-->
    <!--    </table>-->
    <!--  </div>-->
    <!--  <p class='text-xs text-gray-500 mt-2'>관리비에는 가스, 수도, 인터넷, 전기비가 포함되어 있습니다.</p>-->
    <!--</div>-->
    <!-- 하단 고정 CTA -->
  </div>
  <div class='sticky bottom-0 bg-white border-t border-gray-400 py-5 px-6 flex justify-between items-center'>
    <div class='flex flex-col'>
      <span class="body1 mb-1.5">
        {room.total}
      </span>
      <span class="caption1 text-gray-800 underline">
        1주 · 9월 8일~9월 15일
      </span>
    </div>
    <button class="w-[120px] rounded-lg btn btn-primary !h-12">
      계약하기
    </button>
  </div>
  <!--<Footer />-->
  <!--<BottomNav slot='footer' />-->
</Layout>
