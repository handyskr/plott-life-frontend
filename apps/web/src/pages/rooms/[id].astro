    <!--<div class='py-8'>-->
    <!--  <h2 class='text-gray-1000 title2 mb-5'>계약 정보</h2>-->
    <!--  <div class='overflow-x-auto'>-->
    <!--    <table class='table text-sm'>-->
    <!--      <tbody>-->
    <!--        <tr>-->
    <!--          <td>임대료</td>-->
