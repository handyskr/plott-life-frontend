---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/template/Header.astro';
import { SignInForm } from '../../components/auth/SignInForm';
import { withQuery } from "ufo";

const searchParams = Astro.url?.searchParams;
const email = searchParams?.get('email');
const redirectURL = searchParams?.get('redirectURL');
---
<Layout>
  <Header
    slot='header'
    showBackIcon={true}
    showHomeIcon={true}
  />
  <div class='flex flex-col max-w-2xl mx-auto items-center py-4 px-6 md:px-24 md:py-32 lg:py-64'>
    <SignInForm
      client:visible
      email={email}
      successURL={redirectURL || '/'}
      setPasswordURL='/auth/reset-password/confirm'
      sentPasswordURL={withQuery('/auth/reset-password/sent', {
        email: email || '',
      })}
    />
  </div>
</Layout>
